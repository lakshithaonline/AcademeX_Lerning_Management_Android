<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Checked background color -->
            <corners android:radius="5dp" /> <!-- Adjust the corner radius as desired -->
            <size android:width="24dp" android:height="24dp" /> <!-- Adjust the size as desired -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <stroke android:color="@android:color/darker_gray" android:width="1dp" /> <!-- Border color and width -->
            <corners android:radius="5dp" /> <!-- Adjust the corner radius as desired -->
            <size android:width="24dp" android:height="24dp" /> <!-- Adjust the size as desired -->
        </shape>
    </item>
</selector>
